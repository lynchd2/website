<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= article.title %>
      <%= link_to article.title, article_path(article)%>
      <%= link_to "Delete Article", article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete that article?"} %>
    </li>
  <% end %>
</ul>

<%= link_to "Create a New Article", new_article_path, class: 'new_article' %>