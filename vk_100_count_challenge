def program(num)
	count = 0
	all_people = [[],[],[],[],[],[],[],[],[],[]]
	(1..num).each do |num|
		all_people[count].push(num)
		if num % 7 == 0
			all_people.reverse
			count = 10 - count
		end
		count += 1 if num % 11 == 0	
		count += 1 
		count = 0 if count == 10
	end
	total = 1
	all_people.each do |person|	
		person.each do |num|
			p "Person #{total} said the number: #{num}"
		end
		total += 1
	end
end

program(100)